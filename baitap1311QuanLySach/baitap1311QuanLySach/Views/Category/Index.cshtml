@{
}

@model IEnumerable<Category>



    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Số lượng sản phẩm
                    </th>
                 
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td width="30%">
                            @category.CategoryName
                        </td>
                        <td width="40%">
                            @category.Description
                        </td>
                        <td width="10%">
                            @category.Books.Count
                        </td>
                      
                    </tr>

                }
            </tbody>
        </table>


    }
    else
    {
        <p>Không tồn tại thể loại trong database</p>
    }


</div>