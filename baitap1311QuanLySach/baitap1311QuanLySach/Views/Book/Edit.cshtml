@{
}
@model BookCreateVM

<form method="post" enctype="multipart/form-data">
    <input hidden asp-for="Book.Id" />
    <div class="border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info">Edit Book</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Book.NameBook"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Book.NameBook" class="form-control" />
                        <span asp-validation-for="Book.NameBook" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Book.Author"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Book.Author" class="form-control" />
                        <span asp-validation-for="Book.Author" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Book.Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Book.Description" class="form-control"></textarea>
                        <span asp-validation-for="Book.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Book.Year"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Book.Year" class="form-control"></textarea>
                        <span asp-validation-for="Book.Year" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Book.Stock"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Book.Stock" class="form-control"></textarea>
                        <span asp-validation-for="Book.Stock" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Book.CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Book.CategoryId" asp-items="@Model.CategorySelectList" class="form-control">
                            <option disabled selected>Vui lòng chọn Category</option>
                        </select>
                        <span asp-validation-for="Book.Description" class="text-danger"></span>
                    </div>
                </div>




                <div class="row form-group">
                    <div class="col">
                        <input type="submit" value="Update" class="btn btn-info" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success">Back</a>
                    </div>
                </div>

            </div>
        </div>
    </div>

</form>



